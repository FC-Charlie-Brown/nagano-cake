<h3>商品一覧</h3>
<%= "全#{@items.count}件" %>
<div class="row flex-container">
<% @items.each do |item|%>
  <div class="flex-item"><%= link_to attachment_image_tag(item, :image, :fill, 200, 200, format: 'jpeg', fallback: "no_image.jpg", size: "200x200"), item_path(item.id) %>
  <p><%= item.name %></p>
  <p><%= item.price %></p>
  </div>
<% end %>
</div>
<%= paginate @items %>
