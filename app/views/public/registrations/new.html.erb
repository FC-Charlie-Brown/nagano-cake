<div class="container">  
  <h5 class= "toptext text-center">新規登録</h5>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

    <div class="form-group row">
      <%= f.label :last_name,'名前', class:"col-sm-3 col-form-label" %>
      (姓)<div class="col-sm-3">
      <%= f.text_field :last_name, autofocus: true, placeholder:"令和", class: "form-control" %>
      </div>
      (名)<div class="col-sm-3">
      <%= f.text_field :first_name, autofocus: true, placeholder:"花子", class: "form-control" %>
      </div>
    </div>
  <div class="form-group row">
    <%= f.label :last_name_kana,'フリガナ', class:"col-sm-3 col-form-label" %>
    (ｾｲ)<div class="col-sm-3">
      <%= f.text_field :last_name_kana, autofocus: true, placeholder:"レイワ", class: "form-control" %>
      </div>
    (ﾒｲ)<div class="col-sm-3">
      <%= f.text_field :first_name_kana, autofocus: true, placeholder:"ハナコ", class: "form-control" %>
      </div>
  </div>
  
  
   <div class="form-group row">
    <%= f.label :email,'メールアドレス', class:"col-sm-3 col-form-label" %>
    <div class="col-sm-3">
    <%= f.email_field :email, autofocus: true, placeholder:"email@example.com", class: "form-control" %>
     </div>
  </div>
   <div class="form-group row">
    <%= f.label :postal_code,'郵便番号(ハイフンなし)', class:"col-sm-3 col-form-label" %>
    <div class="col-sm-3">
    <%= f.text_field :postal_code, autofocus: true, placeholder:"0000000", class: "form-control" %>
     </div>
  </div>
  <div class="form-group row">
    <%= f.label :address,'住所', class:"col-sm-3 col-form-label" %>
    <div class="col-sm-5">
    <%= f.text_field :address, autofocus: true, placeholder:" 東京都千代田区千代田0-0", class: "form-control" %>
     </div>
  </div>
  <div class="form-group row">
    <%= f.label :telephone_number,'電話番号(ハイフンなし)', class:"col-sm-3 col-form-label" %>
    <div class="col-sm-3">
    <%= f.text_field :telephone_number, autofocus: true, placeholder:"00000000000", class: "form-control" %>
     </div>
  </div>

  <div class="form-group row">
    <%= f.label :password,'パスワード(6文字以上)', class:"col-sm-3 col-form-label" %>
    <div class="col-sm-3">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
     </div>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation,'パスワード(確認用)', class:"col-sm-3 col-form-label" %>
    <div class="col-sm-3">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
     </div>
  </div>

 <%= f.submit "新規登録",class:'btn btn-success col-sm-2 offset-sm-3' %>
  
<% end %>

</div>
<h5 class= "toptext text-center">既に登録済みの方</h5>

<span><%= render "public/shared/links" %>からログインしてください</span>