<h4>新規登録</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :last_name,'名前' %>
    (姓)<%= f.text_field :last_name, autofocus: true, placeholder:"令和" %>
    (名)<%= f.text_field :first_name, autofocus: true, placeholder:"花子" %>
  </div>
  <div class="field">
    <%= f.label :last_name_kana,'フリガナ' %>
    (セイ)<%= f.text_field :last_name_kana, autofocus: true, placeholder:"レイワ" %>
    (メイ)<%= f.text_field :first_name_kana, autofocus: true, placeholder:"ハナコ" %>
  </div>
  
  
   <div class="field">
    <%= f.label :email,'メールアドレス' %>
    <%= f.email_field :email, autofocus: true, placeholder:"email@example.com" %>
  </div>
   <div class="field">
    <%= f.label :postal_code,'郵便番号(ハイフンなし)' %>
    <%= f.text_field :postal_code, autofocus: true, placeholder:"0000000" %>
  </div>
  <div class="field">
    <%= f.label :address,'住所' %>
    <%= f.text_field :address, autofocus: true, placeholder:" 東京都千代田区千代田0-0" %>
  </div>
  <div class="field">
    <%= f.label :telephone_number,'電話番号(ハイフンなし)' %>
    <%= f.text_field :telephone_number, autofocus: true, placeholder:"00000000000" %>
  </div>

  <div class="field">
    <%= f.label :password,'パスワード(6文字以上)' %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,'パスワード(確認用)' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>


<h4>既に登録済みの方</h4>
<p><%= render "public/shared/links" %>からログインしてください</p>