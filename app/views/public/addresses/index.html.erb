      <h1>配送先登録</h1>

      <%= form_with  model:@address,url: addresses_path, local:true do |f| %>
      　<%= f.hidden_field :customer_id, :value => current_customer.id %>
        <div class='form-group'>
          <%= f.label :postal_code, '郵便番号' %>
          <%= f.text_field :postal_code, placeholder:"郵便番号"%>
      　</div>

        <div class='form-group'>
          <%= f.label :address, '住所' %>
          <%= f.text_field :address, placeholder:"住所"%>
        </div>

        <div class='form-group'>
          <%= f.label :name, '宛名' %>
          <%= f.text_field :name, placeholder:"宛名"%>
        </div>

        <%= f.submit "新規登録" %>
      <% end %>
      <h1>配送先一覧</h1>
      <table class="table table-bordered w-75">
            <thead class="thead-light">
              <tr>
                <th>郵便番号</th>
                <th>住所</th>
                <th>宛名</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td><%= link_to '編集', edit_address_path(address.id) %></td>
          <td><%= link_to '削除', address_path(address.id), method: :delete %></td>

        </tr>
      <% end %>
      </table>
