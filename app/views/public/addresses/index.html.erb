      <h5 class= "toptext2 text-center">配送先登録/一覧</h5>

      <%= form_with  model:@address,url: addresses_path, local:true do |f| %>
      　<%= f.hidden_field :customer_id, :value => current_customer.id %>

        <div class='form-group row'>
          <%= f.label :postal_code, '郵便番号',class:"col-sm-2 col-form-label" %>
          <%= f.text_field :postal_code, placeholder:"郵便番号",class:'form-control col-sm-3'%>
      　</div>

        <div class='form-group row'>
          <%= f.label :address, '住所',class:"col-sm-2 col-form-label" %>
          <%= f.text_field :address, placeholder:"住所",class:'form-control col-sm-6'%>
        </div>

        <div class='form-group row'>
          <%= f.label :name, '宛名',class:"col-sm-2 col-form-label" %>
          <%= f.text_field :name, placeholder:"宛名",class:'form-control col-sm-3'%>
          <%= f.submit "新規登録",class:'btn btn-success col-sm-2 offset-sm-3' %>
        </div>
      <% end %>
      <br>
      <table class="table table-bordered col-sm-8">
            <thead class="thead-light">
              <tr>
                <th style="width:15%">郵便番号</th>
                <th style="width:35%">住所</th>
                <th style="width:15%">宛名</th>
                <th style="width:45%"></th>
              </tr>
            </thead>
      <% @addresses.each do |address| %>
        <tr>
          <td class="align-middle"><%= address.postal_code %></td>
          <td class="align-middle"><%= address.address %></td>
          <td class="align-middle"><%= address.name %></td>
          <td>
            <%= link_to '編集する', edit_address_path(address.id), class: 'btn btn-success col-sm-5' %>
            <%= link_to '削除する', address_path(address.id), method: :delete,class: 'btn btn-danger colsm-5' %>
          </td>

        </tr>
      <% end %>
      </table>
