<h2>注文履歴詳細</h2>
<table class="table table-bordered w-50">
  <h5>注文情報</h5>
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td><%= @order.address %></td>
  </tr>
  <tr>
    <th>支払い方法</th>
    <td><%= @order.payment_way_i18n %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <td><%= @order.status %></td>
  </tr>

  <table class="table table-bordered w-50">
    <h5>請求情報</h5>
    <tr>
      <th>商品合計</th>
      <td><%= "#{@total_price}円" %></td>
    </tr>
    <tr>
      <th>配送料</th>
      <td><%= "#{@order.shipping_fee}円" %></td>
    </tr>
    <tr>
      <th>ご請求額</th>
      <td><%= "#{@order.sum}円" %></td>
    </tr>

    <table class="table table-bordered w-50">
      <h5>注文内容</h5>
      <tr>
        <th>商品</th>
        <th>単価（税込）</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
      </thead>
      
      <% @order_details.each do |order_detail| %>
      <% 
        price = (order_detail.item.price.to_i*1.1).to_i
        amount = order_detail.amount.to_i 
        item_total_price = price * amount
    %>
      <tr>
        <td>
          <%=  attachment_image_tag order_detail.item, :image, :fill, 300, 300, format: 'jpeg', fallback: "no_image.jpg", size: "300x300",class:'cart-item-image' %><%= order_detail.item.name %>
        </td>
        <td><%= "#{price}円" %></td>
        <td>
          <%= "#{amount}" %>
        </td>
        <td><%= "#{item_total_price}円" %></td>
      </tr>
      <% end %>
    </table>