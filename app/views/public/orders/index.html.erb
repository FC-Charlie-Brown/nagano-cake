<h5 class= "toptext2 text-center">注文履歴一覧</h5>
  <table class="table table-bordered">
    <thead class="thead-light">
      <tr>
        <th style="width:15%">注文日</th>
        <th style="width:40%">配送先</th>
        <th style="width:10%">注文商品</th>
        <th style="width:10%">支払金額</th>
        <th style="width:10%">ステータス</th>
        <th style="width:10%">注文詳細</th>
      </tr>
    </thead>




  <% 
        @orders.each do |order| 
        name = eval("@name#{order.id}")

      %>

      <tr>
        <td class="align-middle"><%= order.created_at %></td>
        <td>
          〒<%= order.postal_code %><br>
          <%= order.address %><br>
          <%= order.name %>
        </td>
        <td class="align-middle"><%= simple_format name %></td>
        <td class="align-middle"><%= order.sum %></td>
        <td class="align-middle"><%= I18n.t("enums.order.order_status.#{order.status}") %></td>
        <td class="align-middle"><%= link_to '表示する', order_path(order.id), class: 'btn btn-primary mx-auto d-block' %></td>
　　　　</tr>
      <% end %>
  </table>


