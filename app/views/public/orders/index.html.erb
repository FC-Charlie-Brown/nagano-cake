<h1>注文履歴一覧</h1>
      <table class="table table-bordered w-75">
            <thead class="thead-light">
              <tr>
                <th>注文日</th>
                <th>配送先</th>
                <th>注文商品</th>
                <th>支払い金額</th>
                <th>ステータス</th>
                <th>注文詳細</th>
              </tr>
            </thead>

      <% 
        @orders.each do |order| 
        name = eval("@name#{order.id}")
        
      %>

        <tr>
          <td><%= order.created_at %></td>
          <td><%= order.address %></td>
          <td><%= simple_format name %></td>
          <td><%= order.sum %></td>
          <td><%= order.status %></td>
          <td><%= link_to '表示する', order_path(order.id) %></td>
　　　　</tr>
      <% end %>

      </table>
