<h2>注文情報入力</h2>
  <%= form_with model: @order, url: confirm_path, method: :GET, local: true do |f| %>
 
    <div class='input-block'>
      <strong>支払い方法</strong><br>
      <%= f.radio_button :payment_way, :"card", checked: true %>
      <span>クレジットカード</span><br>
      <%= f.radio_button :payment_way, :"bank" %>
      <span>銀行振込</span><br>
    </div>
  
    <div class='input-block'>
      
      <div class='input-block-address'>
        <strong>お届け先</strong><br>
        <%= f.radio_button :address, :"ご自身の住所", checked: true %>
        <span>ご自身の住所
        <br>
        〒<%= current_customer.postal_code %>
        <%= current_customer.address %>
        <br>
         <%= current_customer.last_name %>
        <%= current_customer.first_name %>
        </span>
      </div>
      
      <div class='input-block-address'>
        <%= f.radio_button :address, :"登録済住所から選択" %>
        <%= f.label :address, '登録済み住所から選択' %><br>
        <!-- nameのところを住所＋郵便番号＋宛名にする必要がある -->
        <%= f.collection_select :customer_id, @addresses, :id, :total_address, { prompt: "選択してください" } %>
      </div><br>
      
      <div class='input-block-address'>
        <%= f.radio_button :address, :"新しいお届け先" %>
        <span>新しいお届け先</span>
        <p>郵便番号(ハイフンなし)</p>
        <%= f.text_field :postal_code %>
        <p>住所</p>
        <%= f.text_area :address %>
        <p>宛名</p>
        <%= f.text_field :name %>
      </div>
      
    </div><br>
    
      
    <%= f.submit '確認' %>
  <% end %>
  
 