<h2>注文情報入力</h2>
<%= form_with model: @order, url: confirm_path, method: :post, local: true do |f| %>

<div class='form-group'>
  <strong>支払い方法</strong><br>
  <%= f.radio_button :payment_way, :card, checked: true %>
  <span>クレジットカード</span><br>
  <%= f.radio_button :payment_way, :bank %>
  <span>銀行振込</span><br>
</div>

<strong>お届け先</strong><br>
<div class="radio">
  <%= f.radio_button :address_radio, :my_address, checked: true %>
  <%= f.label :address_my_address, "ご自身の住所" %>
  〒<%= current_customer.postal_code %>
  <%= current_customer.address %>
  <br>
  <%= current_customer.last_name %>
  <%= current_customer.first_name %>
</div>

<div class="radio">
  <%= f.radio_button :address_radio, :already_address %>
  <%= f.label :address_other_address, '登録済み住所から選択' %><br>
  <%= f.collection_select :already_address, @addresses, :id, :total_address, { prompt: "選択してください" } %>
</div><br>

<div class="radio">
  <%= f.radio_button :address_radio, :new_address %>
  <span>新しいお届け先</span><br>
  <div class='form-group'>
    <%= f.label :postal_code, '郵便番号' %>
    <%= f.text_field :postal_code, placeholder:"郵便番号",class:'form-control'%>
  </div>
  <div class='form-group'>
    <%= f.label :address, '住所' %>
    <%= f.text_field :address, placeholder:"住所",class:'form-control'%>
  </div>
  <div class='form-group'>
    <%= f.label :name, '宛名' %>
    <%= f.text_field :name, placeholder:"宛名",class:'form-control'%>
  </div>
</div>

<br>


<%= f.submit '確認' %>
<% end %>