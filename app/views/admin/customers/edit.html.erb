
<h5 class= "toptext2 text-center"><%= "#{@customer.last_name}" "#{@customer.first_name}" %>さんの会員情報編集</h5>

<% if @customer.errors.any? %>
  <%= @customer.errors.count %>件のエラーが発生しました
  <% @customer.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with  model:@customer,url: admin_customer_path,method: :put, local:true do |f| %>

  <div class="form-group row">
    <legend class="col-form-label col-sm-2">会員ID</legend>
    <legend class="form-control-plaintext col-sm-3"><%= @customer.id %></legend>
  </div>

  <div class='form-group row'>
    <legend class="col-form-label col-sm-2">氏名</legend>
    <%= f.text_field :last_name, placeholder:"名前（姓）",class:'form-control col-sm-3'%>
    <%= f.text_field :first_name, placeholder:"名前（名）",class:'form-control col-sm-3 offset-sm-1'%>
  </div>

  <div class='form-group row'>
    <legend class="col-form-label col-sm-2">フリガナ</legend>
    <%= f.text_field :last_name_kana, placeholder:"名前（カナ姓）",class:'form-control col-sm-3'%>
    <%= f.text_field :first_name_kana, placeholder:"名前（カナ名）" ,class:'form-control col-sm-3 offset-sm-1'%>
  </div>

  <div class="form-group row">
    <%= f.label :postal_code, '郵便番号',class:"col-sm-2 col-form-label"%>
    <%= f.text_field :postal_code, placeholder:"郵便番号" ,class:'form-control col-sm-3'%>
  </div>

  <div class="form-group row">
    <%= f.label :address, '住所',class:"col-sm-2 col-form-label"%>
    <%= f.text_field :address, placeholder:"住所" ,class:'form-control col-sm-8'%>
  </div>

　<div class="form-group row">
    <%= f.label :telephone_number, '電話番号',class:"col-sm-2 col-form-label"%>
    <%= f.text_field :telephone_number, placeholder:"電話番号" ,class:'form-control col-sm-3'%>
  </div>

  <fieldset class="form-group">
    <div class="row">
      <legend class="col-form-label col-sm-2 pt-0">会員ステータス</legend>
      <div class="col-sm-6">
        <div class="form-check form-check-inline">
          <%= f.radio_button :is_deleted, false, class:'form-check-input' %><label　class="form-check-label">有効</label>
        </div>
        <div class="form-check form-check-inline">
    　     <%= f.radio_button :is_deleted, true, class:'form-check-input' %><label　class="form-check-label">退会</label>
        </div>
      </div>
    </div>
  </fieldset>

  <%= f.submit "変更を保存", class:"btn btn-success mt-3 mb-3 offset-sm-2" %>
<% end %>
