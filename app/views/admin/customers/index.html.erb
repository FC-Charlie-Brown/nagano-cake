<h1>All Customers</h1>

<ul class="customers">
    <table>
      <tr>
        <th>会員ID</th>
        <th>⽒名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= customer.last_name %> <%= customer.first_name %></td>
          <td><%= customer.email %></td>
          <td>
            <% if customer.is_deleted %>
            <span>退会</span>
            <% else %>
            <span>有効</span>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tr>
    </table>
      

</ul>