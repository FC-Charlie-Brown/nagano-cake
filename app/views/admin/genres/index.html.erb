
<h2>ジャンル一覧・追加</h2>
  <%= form_with model: @genre, url:'/admin/genres', local:true do |f| %>
    <p>ジャンル名
      <%= f.text_field :name %>
       <button type="submit" class="btn btn-success">新規登録</button>
    </p>
  <% end %>
  
<div class="container">  
  <div class="row">    
    <div class="col-lg-5">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th scope="col">ジャンル</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td>
              <%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-sm btn-block btn-success mt-4" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>  
</div>  